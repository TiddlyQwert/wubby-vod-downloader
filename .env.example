# VOD download destination folder
DOWNLOAD_PATH=./downloads

# Time to check for new VODs (24-hour format, e.g., "14:30" for 2:30 PM)
CHECK_TIME=02:00

# Base URL for VOD archive
VOD_BASE_URL=https://archive.wubby.tv/vods/public/

# Enable debug logging (true/false)
DEBUG=false

# Organization format for Plex/Jellyfin
# Available variables: {year}, {month}, {month_name}, {day}, {title}, {date}
FOLDER_STRUCTURE={month_name} - {year}

# File naming pattern
# Available variables: {year}, {month}, {month_name}, {day}, {title}, {date}, {time}, {original_name}
FILE_NAME_PATTERN={title} - {date}

# Skip files larger than this size (in MB, 0 for no limit)
MAX_FILE_SIZE_MB=0
